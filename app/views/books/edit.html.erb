
<h1>Editing Book</h1>

<div class="message">
  <% if @book.errors.any? %>
    <p>Please check the error details.</p>
    <ul>
      <% @book.errors.full_messages.each do |error| %>
      <li><%= error %></li>
      <%end%>
    </ul>
  <%end%>

  <%= form_with model: @book do |f| %>
    <p class="text">Title</p>
    <%= f.text_field :title %>
    <p class="text">Opinion</p>
    <%= f.text_area :body %>
    <%= f.submit "Update Book"%>
  <%end%>
</div>

  <%=link_to "Show", book_path(@book.id)%>|<%=link_to "Back",books_path %>