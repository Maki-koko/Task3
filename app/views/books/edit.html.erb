  <% if @book.errors.any? %>
    <p>Please check the error details.</p>
    <ul>
      <% @book.errors.full_messages.each do |error| %>
      <li><%= error %></li>
      <%end%>
    </ul>
  <%end%>
  
<main>
<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      
      <h1>Editing Book</h1>
      
        <%= form_with model: @book do |f| %>
          <div class="form-group">
          <p class="text">Title</p>
          <%= f.text_field :title %>
          </div>
          
          <div class="form-group">
          <p class="text">Opinion</p>
          <%= f.text_area :body %>
          </div>
          
          <div class="form-group">
          <%= f.submit "Update Book",class:"btn btn-sm btn-success" %>
          </div>
        <%end%>
      
        <%=link_to "Show", book_path(@book.id)%> | <%=link_to "Back",books_path %>
    </div>
  </row>
</div>

</main>
