
<table>
  <h1>User info</h1>
  <tr>
    <th>name</th>
    <th>introduction</th>
  </tr>
  
 <tr>
     <td><%= image_tag user.get_profile_image(100,100) %></td>
    
     <td><%= user.name %></td>
    
     <td><%= user.introduction %></td>
     <%= link_to edit_user_path(user) do %>
  <i class="fa-solid fa-user-gear"></i>
     <%end%>
  <tr>
 </table>


<div class="New-post">
  <h2 >New book</h2>
  <%= form_with model: book do |new| %>
  
    <p class="text">Title</p>
    <%= new.text_field :title %>
    
    <p class="text">Opinion</p>
    <%= new.text_area :body %>
    
    <%= new.submit "Create Book"%>
    
  <%end%>
</div>

