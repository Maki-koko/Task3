<div class='container px-5 px-sm-0'>
 
 <div class="row">
  
  <%= render 'books/info',user: @user, book: @bookn %>
  
  <div class='col-md-8 offset-md-1'>
    <table class="table">
      <thead>
       <tr>
         <th>Title</th>
         <th>Opinion</th>
         <th colspan="3"></th>
       </tr>
      </thead>
      <tboby>
       <% @books.each do |list| %>
        <tr>
           <td><%= link_to user_path(list.user_id) do %>
