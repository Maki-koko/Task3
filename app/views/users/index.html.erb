
<div class='container px-5 px-sm-0'>
  <div class="row">
    
    <%= render 'books/info',user: @user, book: @book %>
    
    <div class='col-md-8 offset-md-1'>
      
      <h1>Users</h1>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |u| %>
              <tr>
                <td><%= image_tag u.get_profile_image(100,100) %></td>
                <td><%= u.name %></td>
                <td><%= link_to "Show", user_path(u.id) %></td>
              </tr>
            <% end %>
          </tbody>
        </table> 
    </div>
    
  </div>
</div>



